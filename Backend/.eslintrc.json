{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "unused-imports",
        "only-warn"
    ],
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".js", ".ts"]
        },
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    },
    "rules": {
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["warn"],
        "import/extensions": "off",
        "indent": [
            "warn",
            2,
            {
                "SwitchCase": 1,
                "MemberExpression": 1,
                "ImportDeclaration": "first"
            }
        ],
        "linebreak-style": 0,
        "quotes": ["warn", "single"],
        "object-curly-spacing": "warn",
        "import/prefer-default-export": "off",
        "no-unused-vars": "warn",
        "object-curly-newline": "warn",
        "semi": "warn"
    }
}
